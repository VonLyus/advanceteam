<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TransparentGray1">

    <androidx.cardview.widget.CardView
        android:id="@+id/modeSetCardViewOut"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/modeSetCardViewIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/modeSet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/ballColor"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

<!--  FrameLayout  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/matchingBall"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="150dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28"
        android:rotation="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TransparentGray">

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/settingBall"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/ballColor"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toTopOf="@+id/settingCardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/settingBall1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/ballColor1"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/settingCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/settingBall2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/ballColor2"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="84dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingCardView2">

                <TextView
                    android:id="@+id/settingBall3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/ballColor3"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingCardView5">

                <TextView
                    android:id="@+id/settingBall4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/ballColor4"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/settingCardView"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/settingBall5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/ballColor5"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/userBalllayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchingBall"
        app:layout_constraintVertical_bias="0.24">

        <androidx.cardview.widget.CardView
            android:id="@+id/slidingCardView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/userBall1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/TransparentGray"
                android:text="2"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/slidingCardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/userBall2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/TransparentGray"
                android:text="3"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/slidingCardView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/userBall3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/TransparentGray"
                android:text="4"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/slidingCardView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/userBall4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/TransparentGray"
                android:text="5"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/slidingCardView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/userBall5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/TransparentGray"
                android:text="6"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ballColor">
        <androidx.cardview.widget.CardView
            android:id="@+id/slidingCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            >

            <TextView
                android:id="@+id/userBall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/TransparentGray"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>

<!--하단 바 제작-->
        <FrameLayout
            android:id="@+id/layout_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.example.powerballver.CustomBottomNavigationView
                android:id="@+id/main_bottom_menu"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#FFFFFF"
                android:layout_gravity="bottom"
                android:translationZ="1dp"
                app:labelVisibilityMode="labeled" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_bottom_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/resetBtn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="3dp"
                        android:translationZ="2dp"
                        app:shapeAppearanceOverlay="@style/RoundedFab"
                        app:backgroundTint="@color/TransparentGray5" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/userBallSet"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="3dp"
                        android:translationZ="2dp"
                        app:shapeAppearanceOverlay="@style/RoundedFab"
                        app:backgroundTint="@color/TransparentGray6"
                        android:visibility="gone"
                        app:srcCompat="@drawable/p"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/cumBallSet"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="3dp"
                        android:translationZ="2dp"
                        app:shapeAppearanceOverlay="@style/RoundedFab"
                        app:backgroundTint="@color/TransparentGray6"
                        android:visibility="gone"
                        app:srcCompat="@drawable/c"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/reset"
                    android:scaleType="centerInside" />
            </FrameLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

